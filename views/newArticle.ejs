<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>New Article</title>
</head>

<body>
    <%- include('navBar.ejs') %>

        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-4 py-5 px-4 px-md-5">
                    <div class="text-center mb-5">
                        <h1 class="fw-bolder">
                            <%= __("New Article") %>
                        </h1>
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-8 col-xl-6">
                            <form id="contactForm" data-sb-form-api-token="API_TOKEN">
                                <!-- Title -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="name" type="text" placeholder="Enter your name..."
                                        data-sb-validations="required" />
                                    <label for="name">
                                        <%= __("Title") %>
                                    </label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">
                                        <%= __("An item name is required.") %>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="price" type="number" placeholder="Enter price..."
                                        data-sb-validations="required" />
                                    <label for="price">
                                        <%= __("Price") %>
                                    </label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">
                                        <%= __("A price is required.") %>
                                    </div>
                                </div>

                                <!-- Tag -->
                                <div class="form-floating mb-3">
                                    <select class="form-select" aria-label="Default select example" id="tag"
                                        data-sb-validations="required">
                                        <option value="lifestyle" selected>
                                            <%= __("Lifestyle") %>
                                        </option>
                                        <option value="motor">
                                            <%= __("Engine") %>
                                        </option>
                                        <option value="mobile">
                                            <%= __("Mobile") %>
                                        </option>
                                        <option value="laptop">
                                            <%= __("Laptop") %>
                                        </option>
                                        <option value="musica">
                                            <%= __("Music") %>
                                        </option>
                                        <option value="Book">
                                            <%= __("Book") %>
                                        </option>
                                    </select>
                                    <label for="tag">
                                        <%= __("Select tag") %>
                                    </label>
                                </div>

                                <!-- File -->
                                <div class="mb-3">
                                    <input class="form-control" id="photo" type="file"
                                        placeholder="Enter your picture..." />
                                    <label class="small text-body-secondary" for="photo">
                                        <%= __("Select Photo") %>
                                    </label>
                                </div>

                                <!-- Type -->
                                <div class="form-floating mb-3">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="sale" id="sell" value="true"
                                            checked>
                                        <label class="form-check-label" for="sale">
                                            <%= __("Sell") %>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="sale" id="buy" value="false">
                                        <label class="form-check-label" for="sale">
                                            <%= __("Buy") %>
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button-->
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg not-available" id="submitButton"
                                        type="submit">
                                        <%= __("Submit") %>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>