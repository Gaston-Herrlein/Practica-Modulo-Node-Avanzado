<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login NodePop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('navBar.ejs') %>

        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-4 py-5 px-4 px-md-5">
                    <div class="text-center mb-5">
                        <h1 class="fw-bolder">
                            <%= __("Login") %>
                        </h1>
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-8 col-xl-6">
                            <form id="contactForm" method="post" action="/api/auth">
                                <!-- Email input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="email" type="email" name="email"
                                        placeholder="name@example.com" data-sb-validations="required,email" />
                                    <label for="email">
                                        <%= __("Email address") %>
                                    </label>
                                    <div class="invalid-feedback" data-sb-feedback="email:required">
                                        <%= __("An email is required.") %>
                                    </div>
                                    <div class="invalid-feedback" data-sb-feedback="email:email">
                                        <%= __("Email is not valid.") %>
                                    </div>
                                </div>
                                <!-- Passwors input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="password" type="password" name="password"
                                        placeholder="1234" data-sb-validations="required" />
                                    <label for="password">
                                        <%= __("Password") %>
                                    </label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">
                                        <%= __("A password is required.") %>
                                    </div>
                                </div>
                                <!-- Submit Button-->
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg" id="submitButton" type="submit">
                                        <%= __("Submit") %>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>